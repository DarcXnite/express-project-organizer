<h1>Edit the Project</h1>

<form action="/projects/edit/<%= id %>/?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="<%= name %>"
      required
    />
  </div>

  <div class="form-group">
    <label for="category">Category</label>
    <input
      type="text"
      class="form-control"
      id="category"
      name="category"
      value="<%= category %>"
      required
    />
  </div>

  <div class="form-group">
    <label for="githubLink">Github Link</label>
    <input
      type="text"
      class="form-control"
      id="githubLink"
      name="githubLink"
      value="<%= githubLink %>"
      required
    />
  </div>

  <div class="form-group">
    <label for="deployedLink">Deployed Link</label>
    <input
      type="text"
      class="form-control"
      id="deployedLink"
      name="deployedLink"
      value="<%= deployedLink %>"
      required
    />
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea
      type="text"
      class="form-control"
      id="description"
      name="description"
      required
    >
<%= description %></textarea
    >
  </div>

  <input type="submit" class="btn btn-primary" />
</form>
